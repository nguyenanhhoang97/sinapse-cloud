{% extends 'base.html.twig' %}
{% block title %}User Registration
{% endblock %}
{% block body %}
	<div class="container">
		<div class="card">
			<h5 class="card-header">User Registration</h5>
			<div class="card-body">
				{{ form_start(form) }}
				<div class="form-group">
					<label>{{ 'label.email'|trans }}</label>
					{{ form_widget(form.email) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.first_name'|trans }}</label>
					{{ form_widget(form.first_name) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.last_name'|trans }}</label>
					{{ form_widget(form.last_name) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.zip'|trans }}</label>
					{{ form_widget(form.zip) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.organization_name'|trans }}</label>
					{{ form_widget(form.organization_name) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.organization_address'|trans }}</label>
					{{ form_widget(form.organization_address) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.country'|trans }}</label>
					{{ form_widget(form.country) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.city'|trans }}</label>
					{{ form_widget(form.city) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.email_language'|trans }}</label>
					{{ form_widget(form.language) }}
				</div>
				<div class="form-group">
					<label>{{ 'label.proposal_describes_org'|trans }}</label>
					{{ form_widget(form.proposal) }}
				</div>
				<div class="form-group row">
					<div class="col-sm-12">{{ 'label.proposal_describes_sit'|trans }}</div>
					<div class="col-sm-12">
						<div class="form-check">
							{{ form_widget(form.increase_teleworking) }}
							<label class="form-check-label" for="form.increase_teleworking">
								{{ 'label.increase_teleworking'|trans }}
							</label>
						</div>
						<div class="form-check">
							{{ form_widget(form.distance_learning) }}
							<label class="form-check-label" for="form.distance_learning">
								{{ 'label.distance_learning'|trans }}
							</label>
						</div>
						<div class="form-check">
							{{ form_widget(form.corona_virus) }}
							<label class="form-check-label" for="corona_virus">
								{{ 'label.corona_virus'|trans }}
							</label>
						</div>
					</div>
				</div>
				<div class="form-group">
					{{ form_widget(form.captcha) }}
					{% if form_errors(form.captcha) %}
						<div class="alert alert-danger" role="alert">
							{{ form_errors(form.captcha) }}
						</div>
					{% endif %}
				</div>
				<div class="form-group row" style="margin-top: 10px;">
					<div class="col-sm-10">
						<button type="submit" class="btn btn-primary">{{ 'button.submit'|trans }}</button>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

{% block css %}
	<style>
		.alert-danger {
			height: 3rem;
		}
		ul {
			list-style-type: none;
		}
	</style>
{% endblock %}
