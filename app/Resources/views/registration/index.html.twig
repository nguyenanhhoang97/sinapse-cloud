{% extends 'base.html.twig' %}
{% block title %}User Registration
{% endblock %}
{% block body %}
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="app-lang" style="width: 200px;">
			<select class="form-control" id="emailLang">
				<option>English</option>
				<option>Spanish</option>
				<option>French</option>
			</select>
		</div>
	</nav>
	<div class="container">
		<div class="card">
			<h5 class="card-header">User Registration</h5>
			<div class="card-body">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.email) }}
					{{ form_widget(form.email) }}
				</div>
				<div class="form-group">
					{{ form_label(form.first_name) }}
					{{ form_widget(form.first_name) }}
				</div>
				<div class="form-group">
					{{ form_label(form.last_name) }}
					{{ form_widget(form.last_name) }}
				</div>
				<div class="form-group">
					{{ form_label(form.zip) }}
					{{ form_widget(form.zip) }}
				</div>
				<div class="form-group">
					{{ form_label(form.organization_name) }}
					{{ form_widget(form.organization_name) }}
				</div>
				<div class="form-group">
					{{ form_label(form.organization_address) }}
					{{ form_widget(form.organization_address) }}
				</div>
				<div class="form-group">
					{{ form_label(form.country) }}
					{{ form_widget(form.country) }}
				</div>
				<div class="form-group">
					{{ form_label(form.city) }}
					{{ form_widget(form.city) }}
				</div>
				<div class="form-group">
					{{ form_label(form.language) }}
					{{ form_widget(form.language) }}
				</div>
				<div class="form-group">
					{{ form_label(form.proposal) }}
					{{ form_widget(form.proposal) }}
				</div>
				<div class="form-group row">
					<div class="col-sm-12">Which of the following proposal describes your current situation</div>
					<div class="col-sm-12">
						<div class="form-check">
							{{ form_widget(form.increase_teleworking) }}
							<label class="form-check-label" for="form.increase_teleworking">
								We would like to increase teleworking
							</label>
						</div>
						<div class="form-check">
							{{ form_widget(form.distance_learning) }}
							<label class="form-check-label" for="form.distance_learning">
								We would like to prepare students with distance learning
							</label>
						</div>
						<div class="form-check">
							{{ form_widget(form.corona_virus) }}
							<label class="form-check-label" for="corona_virus">
								Our office are closed cause to Corona virus
							</label>
						</div>
					</div>
				</div>
				<div class="form-group row" style="margin-top: 10px;">
					<div class="col-sm-10">
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
